<Window x:Class="Task_003.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_003"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="START" HorizontalAlignment="Left" Margin="100,283,0,0" VerticalAlignment="Top" Height="75" Width="125" HorizontalContentAlignment="Center" Opacity="1" Click="Button_Click_Start"/>
        <Button Content="STOP" HorizontalAlignment="Center" Margin="0,283,0,0" VerticalAlignment="Top" Height="75" Width="125" Click="Button_Click_Stop"/>
        <Button Content="RESET" HorizontalAlignment="Left" Margin="575,283,0,0" VerticalAlignment="Top" Height="75" Width="125" Click="Button_Click_Reset"/>
        <TextBox x:Name="TimerTextBox" HorizontalAlignment="Center" Margin="0,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="600" Height="112"/>

    </Grid>
</Window>
